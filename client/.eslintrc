{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
      "semi"              : [1, "always"],
      "consistent-return" : 2,
      "no-else-return"    : 1,
      "space-unary-ops"   : 2,
      "no-undef"          : 2
  },
  "parserOptions": {
    "sourceType": "module",
  },
  "globals": {
    "window": true,
    "angular": true
  }
}
